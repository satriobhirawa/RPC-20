<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerVersusCPU">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/close"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/ivIconRPC"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:src="@drawable/splash_screen1"
        />

    <TextView
        android:id="@+id/tvPlayerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemain 1"
        android:fontFamily="@font/qdbettercomicsans_jeeeg"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivIconRPC"
        android:layout_marginLeft="30dp"
        android:textColor="@color/blue"
        />

    <TextView
        android:id="@+id/tvPlayerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COM"
        android:fontFamily="@font/qdbettercomicsans_jeeeg"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivIconRPC"
        android:layout_marginRight="30dp"
        android:textColor="@color/blue"
        />

    <ImageView
        android:id="@+id/ivPlayerOneBatu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/batu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerOne"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/ivPlayerOneKertas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/kertas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPlayerOneBatu"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/ivPlayerOneGunting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/gunting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPlayerOneKertas"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        />

    <!---->
    <ImageView
        android:id="@+id/ivPlayerTwoBatu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/batu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerTwo"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/ivPlayerTwoKertas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/kertas"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPlayerTwoBatu"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/ivPlayerTwoGunting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/gunting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPlayerTwoKertas"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        />

    <!---->
    <ImageView
        android:id="@+id/ivVersusIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vs"
        app:layout_constraintLeft_toRightOf="@id/ivPlayerOneKertas"
        app:layout_constraintRight_toLeftOf="@id/ivPlayerTwoKertas"
        app:layout_constraintTop_toBottomOf="@id/ivIconRPC"
        android:layout_marginTop="80dp"
        />

    <ImageView
        android:id="@+id/ivRefresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/refresh"
        />

</androidx.constraintlayout.widget.ConstraintLayout>